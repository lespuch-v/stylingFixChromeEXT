{
  "manifest_version": 3,
  "name": "FixStyles",
  "description": "This Extension removes and fixes styles on the webpage",
  "version": "1.0",
  "icons": {
    "48": "images/icon-48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://etesty2.mdcr.cz/Test/TestExam/*", "https://etesty2.mdcr.cz/Test/TestPractise/*"],
      "js": ["scripts/content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "48": "images/icon-48.png"
    }
  }
}
